Config {
  font        = "xft:Dejavu\ Sans\ Mono:alias=true:size=10:hinting=true,xft:Symbola,xfg:Noto\ Color\ Emoji"
  bgColor     = "black",
  fgColor     = "white",
  position    = Top,
  sepChar = "%",
  alignSep = "}{",
  template = "%StdinReader% }{ %dynnetwork% | %multicpu% | %memory% | %battery% | %default:Master% | %date% %RJTT%",
  commands    = [
      Run Weather "RJTT" [
        "-t",       "<fc=cyan>[<skyCondition>, <tempC>C, <rh>%]</fc>"
      ] 3600,
      Run DynNetwork [
        "-t",       "<dev>: [<rx>, <tx>]",
        "-S",       "True",
        "-L",       "1000",
        "-H",       "5000",
        "--low",    "red",
        "--normal", "orange",
        "--high",   "green"
      ] 10,
      Run Memory [
        "-t",       "Mem: <usedratio>%",
        "-L",       "50",
        "-H",       "90",
        "--low",    "green",
        "--normal", "orange",
        "--high",   "red"
      ] 10,
      Run MultiCpu [
        "-t",       "CPU: [<total0>,<total1>,<total2>,<total3>]",
        "-L",       "30",
        "-H",       "80",
        "--low",    "green",
        "--normal", "orange",
        "--high",   "red"
      ] 50,
      Run BatteryP ["BAT1"] [
        "-t",       "Bat: <acstatus>",
        "-L",       "10",
        "-H",       "50",
        "--low",    "red",
        "--normal", "orange",
        "--high",   "green",
        "--",
          "-o", "<left>% (<timeleft>)",
          "-O", "<fc=orange>Charging <left>% (<timeleft>)</fc>",
          "-i", "<fc=green>Full</fc>"
      ] 60,
      -- Run Volume "default" "Master" [] 10,
      Run Date "<fc=lightpink>%a %b %_d %Y %H:%M:%S</fc>" "date" 1,
      Run StdinReader
    ],
  allDesktops = True
}
